    <Button
        android:id="@+id/b_sendMessage2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button" />

    <Button
        android:id="@+id/b_sendMessage3"
        android:layout_width="match_parent"
